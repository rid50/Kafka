     /opt/bitnami/kafka/bin/kafka-topics.sh --bootstrap-server kafka:9092 --create --if-not-exists --topic yaruss-output --replication-factor 1 --partitions 1

     echo '======================== Successfully created the following topics:'
     /opt/bitnami/kafka/bin/kafka-topics.sh --bootstrap-server kafka:9092 --list
     "        
        
